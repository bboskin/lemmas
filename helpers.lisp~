
; Creating new variable names
(defun next-index () 0)
(defun next-var ()
  (let ((i (next-index)))
    (progn
      (defun next-index () (+ 1 i))
      (intern (concatenate 'string
			   "fresh-var"
			   (get-name i))))))

;; The name of a miniKanrenized function
(defun get-rel-name (name)
  (intern
   (concatenate 'string (string name) "-REL")))
